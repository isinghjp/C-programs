// program to print full Pyramid:
#include<stdio.h>
#include<conio.h>
#define MAX 5

void main()
{
	int i,j;
	int space=4;
	clrscr();
	for(i=0;i< MAX;i++)
	{
		/*loop for initially space, before star printing*/
		for(j=0;j< space;j++)
		{
			printf(" ");
		}
		for(j=0;j<=i;j++)
		{
			printf("* ");
		}

		printf("\n");
		space--;
	}
	/*repeat it again*/
	space=0;
	/*run loop (parent loop) till number of rows*/
	for(i=MAX;i>0;i--)
	{
		/*loop for initially space, before star printing*/
		for(j=0;j< space;j++)
		{
			printf(" ");
		}
		for(j=0;j< i;j++)
		{
			printf("* ");
		}

		printf("\n");
		space++;
	}
	getch();
}

